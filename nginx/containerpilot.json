{
  "consul": "consul:8500",
  "preStart": "/bin/reload-nginx.sh preStart",
  "logging": {
    "level": "DEBUG",
    "format": "text"
  },
  "services": [
    {
      "name": "nginx",
      "port": 80,
      "interfaces": ["eth1", "eth0"],
      "health": "/usr/bin/curl -o /dev/null --fail -s http://localhost/health",
      "poll": 10,
      "ttl": 25
    }
  ],
  "backends": [
    {
      "name": "sales",
      "poll": 3,
      "onChange": "/bin/reload-nginx.sh onChange"
    },
    {
      "name": "customers",
      "poll": 4,
      "onChange": "/bin/reload-nginx.sh onChange"
    }
  ]
}
