{
  "consul": "consul:8500",
  "services": [
    {
      "name": "sales",
      "port": 3000,
      "health": "/usr/bin/curl -o /dev/null --fail -s http://localhost:3000/data",
      "poll": 3,
      "ttl": 10
    }
  ],
  "backends": [
    {
      "name": "customers",
      "poll": 3,
      "onChange": "pkill -SIGHUP node"
    },
    {
      "name": "mysql",
      "poll": 5,
      "onChange": "pkill -SIGHUP node"
    },
    {
      "name": "mysql-primary",
      "poll": 5,
      "onChange": "pkill -SIGHUP node"
    }
  ]
}
